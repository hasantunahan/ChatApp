<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"

android:layout_height="80dp"
android:layout_margin="10dp"
android:padding="5dp"
app:cardBackgroundColor="#F1F1F1"
app:cardCornerRadius="20dp"
app:cardElevation="5dp">


<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profilKisiImagaView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="2dp"
        android:paddingRight="3dp" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profilKisiAdiTextView"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anons_fontt"
            android:textColor="@color/profikKoyuGri"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/profilKisiAnonsTextView"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/infotextfont"
            android:textColor="@color/profikOrtaGri"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/profilKnumTextView"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/infotextfont"
            android:textColor="@color/profikAcikGri"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profilTarihTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/profikOrtaGri" />

        <ImageView
            android:id="@+id/profilLikeImageView"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/profilLikeSayisiTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/profikKoyuGri" />
    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>
