<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="#F1F1F1"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:padding="5dp"
    android:layout_margin="10dp"
    >


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilKisiImagaView"
            android:layout_width="77dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profilKisiAdiTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonsfont"
                android:textColor="@color/profikKoyuGri"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/profilKisiAnonsTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/infotextfont"
                android:textColor="@color/profikOrtaGri"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/profilKnumTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/infotextfont"
                android:textColor="@color/profikAcikGri"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profilTarihTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/profikOrtaGri" />

            <ImageView
                android:id="@+id/profilLikeImageView"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/profilLikeSayisiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/profikKoyuGri" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>